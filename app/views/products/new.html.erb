<% provide(:title, "新建") %>
<%= form_for :info, url: products_path(@product), method: 'post' do |f| %>

  <%= f.label '名称' %>
  <%= f.text_field :name %><br>
  <%= f.label '类别' %>
  <%= f.select(:category_id, options_from_collection_for_select(@cates.all, :id, :name)) %><br>
  <%= f.label '属性' %><br>
  <%= f.label '属性名称' %>
  <%= f.text_field :p_name1 %>|<%= f.text_field :p_name2 %><br> 
  <%= f.label '属性值' %>
  <%= f.text_field :p_value1 %>|<%= f.text_field :p_value2 %><br>

  <%= f.label '规格名称' %>
  <%= f.text_field :sku_name %><br>
  <%= f.label '规格值' %>
  <%= f.text_field :sku_value %><br>

  <%= f.label '价格' %>
  <%= f.text_field :price %><br>
  <%= f.label '数量' %>
  <%= f.text_field :quantity %><br>
  <%= f.button '发布' %><br>
<% end %>